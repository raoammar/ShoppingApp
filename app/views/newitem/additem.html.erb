<h1>Add items</h1>
<h1>Enter new Item to be added</h1>

<%= form_for(@item) do |f| %>
<div class="field">
<%= f.label :name %><br />
<%= f.text_field :name %>
</div>
<div class="field">
<%= f.label :price %><br />
<%= f.text_field :price %>
</div>
<div class="field">
<%= f.label :description %><br />
<%= f.text_field :description %>
</div>
<div class="field">
<%= f.label :image %><br />
<%= f.text_field:image %>
</div>
<div class="actions">
<%= f.submit "Submit" %>
</div>
<% end %>